{{> navbar}}

<div class="formulario">
    <form id="form" action="http://localhost:8080/productos" method="POST" enctype="application/x-www-form-urlencoded">
            <legend>Ingresa un nuevo producto</legend>
            <div>
                <div class="campo">
                    <label for="name">Nombre</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="campo">
                    <label for="price">Precio</label>
                    <input type="number" step="1" id="price" name="price" required>
                </div>
                <div class="campo">
                    <label for="qty">Stock</label>
                    <input type="number" step="1" id="qty" name="qty" required>
                </div>
                <div class="campo">
                    <label for="img">URL de img</label>
                    <input type="text" id="img" name="img" required>
                </div>
                <div class="botones">
                    <input id="reset" type="reset" value="Limpiar">
                    <input id="submit" type="submit" value="Enviar">
                </div>
            </div>
    </form>
</div>

{{> footer}}