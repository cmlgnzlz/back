doctype html
html
    head
        title='Login'
        style
            include styles.css
        div(id='logInBox')
            div(class='titulo')
                    span="Login de usuario"
            form(id='loginForm' method="POST" action="/login") 
                input(id='login' type='text' name='login' required placeholder="Ingresa tu usuario")
                div(class='botones')
                    input(type='submit' id='submit' class='botonLogin' value='Ingresar')