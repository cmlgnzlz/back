html
    head
        title='Carrito'
        style
            include styles.css
    div(id='navbar')
        include navbar.pug
        include userlog.pug
    body
        div(class='productos')
            div(class='titulo')
                span="Carrito"
                span= `id = ${userdata.id}`
                
            div(class='productos')
                table(style='width:90%', border='1')
                    tbody(id='tabla')
                        tr
                            th IMG
                            th NOMBRE
                            th PRECIO
                            th QTY 
                        for item in carrito
                            tr
                                td(class='img')
                                    img(src=item.img)     
                                td(class='text-name') #{item.name}
                                td(class='text-price') $ #{item.price}
                                td(class='text-price') #{item.qty}
                form(id='logOutForm' method="POST" action="/api/carrito")
                    div
                        input(type='submit' id='submit' class='botonLogin' value='Comprar')
    
    include footer.pug